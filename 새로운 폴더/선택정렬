def selection_sort(arr):
    # リストの要素数を取得
    n = len(arr)

    # 配列の要素を逐次処理
    for i in range(n - 1):
        # 未ソート部分から最小値のインデックスを探索
        min_idx = i
        for j in range(i + 1, n):
            if arr[j] < arr[min_idx]:
                min_idx = j

        # 最小値を未ソート部分の先頭と交換
        arr[i], arr[min_idx] = arr[min_idx], arr[i]

    return arr
